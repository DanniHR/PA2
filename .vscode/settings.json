{
  "[python]": {
      "editor.wordBasedSuggestions": false
    },
    "git.ignoreMissingGitWarning": false,
    "python.globalModuleInstallation": true,
    
    "git.suggestSmartCommit": false,
    "debug.onTaskErrors": "abort",
 
    "git.decorations.enabled": false,
    "editor.autoClosingQuotes": "never",
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": 
    {
    
    "terminal.foreground": "#ffffff",
    "editor.foreground": "#cec5c5",
    "titleBar.activeForeground": "#ccc7c7",

   
    "list.errorForeground":"#9c86c5",
    "list.warningForeground":"#9c86c5",
    "editorError.foreground":"#9c86c5",
    "editorWarning.foreground":"#9c86c5"
    



    },
    "pythonPreview.hideCode": true,
    "workbench.editor.enablePreview": false,
    "editor.minimap.enabled": false,




    "C_Cpp.configurationWarnings": "enabled",
    "C_Cpp.codeAnalysis.clangTidy.path": "${fileDirname}",
    "C_Cpp.clang_format_path": "${fileDirname}",
    "C_Cpp.default.compilerPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/clang++",
    
    "lldb.showDisassembly": "never",
    "C_Cpp.codeAnalysis.clangTidy.args": [
      "--std=c++17",
      "-stdlib=libc++",
      "-fdiagnostics-color=always",
      "-fcolor-diagnostics",
      "-fansi-escape-codes"
    ],

    "C_Cpp.files.exclude": {
      "**/.vscode": true,
      "**/.vs": true
    },

    "code-runner.runInTerminal": true,
   
    "code-runner.executorMap": {
      
      
      "cpp": "cd $dir && clear && clang++ --std=c++17 -stdlib=libc++ -fdiagnostics-color=always -g $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt"
    },

 
       // Clang tidy disabled
       "C_Cpp.codeAnalysis.clangTidy.checks.disabled": 
       [

      ],
    "files.associations": {
      "iostream": "cpp",
      "vector": "cpp",
      "__bit_reference": "cpp",
      "__bits": "cpp",
      "__config": "cpp",
      "__debug": "cpp",
      "__nullptr": "cpp",
      "__split_buffer": "cpp",
      "compare": "cpp",
      "cstddef": "cpp",
      "cstdio": "cpp",
      "cstdlib": "cpp",
      "cstring": "cpp",
      "exception": "cpp",
      "initializer_list": "cpp",
      "iosfwd": "cpp",
      "limits": "cpp",
      "memory": "cpp",
      "new": "cpp",
      "stdexcept": "cpp",
      "type_traits": "cpp",
      "typeinfo": "cpp",
      "__errc": "cpp",
      "__locale": "cpp",
      "__mutex_base": "cpp",
      "__string": "cpp",
      "__threading_support": "cpp",
      "__tuple": "cpp",
      "atomic": "cpp",
      "bitset": "cpp",
      "cctype": "cpp",
      "chrono": "cpp",
      "clocale": "cpp",
      "cstdarg": "cpp",
      "cstdint": "cpp",
      "ctime": "cpp",
      "cwchar": "cpp",
      "cwctype": "cpp",
      "ios": "cpp",
      "istream": "cpp",
      "locale": "cpp",
      "mutex": "cpp",
      "ostream": "cpp",
      "ratio": "cpp",
      "streambuf": "cpp",
      "string": "cpp",
      "string_view": "cpp",
      "system_error": "cpp",
      "tuple": "cpp",
      "variant": "cpp",
      "algorithm": "cpp",
      "__hash_table": "cpp",
      "deque": "cpp",
      "unordered_map": "cpp",
      "fstream": "cpp",
      "filesystem": "cpp",
      "concepts": "cpp",
      "iomanip": "cpp",
      "stack": "cpp",
      "__node_handle": "cpp",
      "array": "cpp",
      "cmath": "cpp",
      "complex": "cpp",
      "optional": "cpp",
      "sstream": "cpp",
      "iterator": "cpp",
      "functional": "cpp",
      "version": "cpp",
      "__memory": "cpp",
      "memory_resource": "cpp"
    },
    "debug.disassemblyView.showSourceCode": false,
    "debug.terminal.clearBeforeReusing": true,
    "lldb.launch.cwd": "${fileDirname}",
    "audioCues.onDebugBreak": "off",
    "audioCues.lineHasBreakpoint": "off",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 8,
    "debug.focusWindowOnBreak": false,
    "terminal.integrated.cwd": "${fileDirname}",
    "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",
    "debug.console.closeOnEnd": true,
    "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
    "C_Cpp.errorSquiggles": "disabled",
    "workbench.settings.openDefaultKeybindings": true,
    
}